source "https://rubygems.org"

ruby "<%= Barebones::RUBY_VERSION %>"

# Defaults
gem "rails", "<%= Barebones::RAILS_VERSION %>"
gem "sass-rails", "~> 5.0"
gem "uglifier", ">= 1.3.0"
gem "jquery-rails"
gem "turbolinks", "~> 5"
gem "jbuilder", "~> 2.5"

group :development, :test do
  gem "byebug"
  gem "pry-byebug"
  gem "web-console", "~> 2.0"
  gem 'listen', '~> 3.0.5'
  gem "spring"
  gem 'spring-watcher-listen', '~> 2.0.0'
  gem "awesome_print"
<% unless options[:skip_minitest] %>
  gem "minitest-rails"
  gem "minitest-reporters"
  gem "minitest-around"
  gem "mocha"
  gem "database_cleaner"
<% end %>
<% unless options[:skip_factory_girl] %>
  gem "factory_girl_rails", "~> 4.0"
<% end %>
end

<% unless options[:skip_carrierwave] %>
# File Uploads
gem "fog"
gem "mini_magick"
gem "carrierwave"
<% end %>

<% unless options[:skip_resque] %>
# Background Processing
gem "resque"
gem "resque-scheduler"
gem 'sinatra', github: 'sinatra/sinatra', branch: 'master'
<% end %>

<% unless options[:skip_sidekiq] %>
# Background Processing
gem "sidekiq"
# gem "sidekiq-scheduler"
<% end %>

# Database
gem "pg", "~> 0.18.4"

# Faster JSON Parsing
gem "oj"
gem "oj_mimic_json"
gem "multi_json"