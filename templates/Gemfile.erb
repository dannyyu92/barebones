source "https://rubygems.org"

ruby "<%= Barebones::RUBY_VERSION %>"

# Defaults
gem "rails", "<%= Barebones::RAILS_VERSION %>"
gem "sass-rails", "~> 5.0"
gem "uglifier"
gem "jquery-rails"
gem "turbolinks"
gem "jbuilder", "~> 2.0"

group :development, :test do
  gem "byebug"
  gem "pry-byebug"
  gem "web-console", "~> 2.0"
  gem "spring", "1.3.6"
  gem "quiet_assets"
  gem "awesome_print"
<% unless options[:skip_minitest] %>
  gem "minitest-rails"
  gem "minitest-reporters"
<% end %>
end

<% unless options[:skip_carrierwave] %>
# File Uploads
gem "fog"
gem "mini_magick"
gem "carrierwave"
<% end %>

<% unless options[:skip_resque] %>
# Background Processing
gem "resque"
gem "resque-scheduler"
<% end %>

# Database
gem "pg", "~> 0.18.2"

<% unless options[:skip_sorcery] %>
# Authentication
gem "sorcery"
<% end %>

# Faster JSON Parsing
gem "oj"
gem "oj_mimic_json"
gem "multi_json"