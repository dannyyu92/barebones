source "https://rubygems.org"

ruby "<%= Barebones::RUBY_VERSION %>"

# Defaults
gem "rails", "<%= Barebones::RAILS_VERSION %>"
gem "sass-rails", "~> 5.0"
gem "uglifier"
gem "jquery-rails"
gem "turbolinks"
gem "jbuilder", "~> 2.0"

group :development, :test do
  gem "byebug"
  gem "pry-byebug"
  gem "web-console", "~> 2.0"
